@model IEnumerable<icbf_app.Models.Jardin>

@{
    ViewData["Title"] = "Index";
}

<h1>Jardines</h1>

<p>
    <a asp-action="Create" class="btn btn-success">+ Nuevo jardín</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreJardin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DireccionJardin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoJardin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreJardin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DireccionJardin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoJardin)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdJardin">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdJardin">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdJardin">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
